<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/dialogHeaderBackground</item>                   <!--header background-->
        <item name="android:windowBackground">@color/dialogBackground</item>     <!--calendar background-->
        <item name="android:colorActivatedHighlight">@color/dialogHighlight</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/dialogTextColor</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/dialogTextColor</item>    <!--days of the week-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.PrimaryPalette.Red" parent="">
        <item name="colorPrimary">#e53935</item>
        <item name="colorPrimaryDark">#ab000d</item>
    </style>

</resources>